#pop-pg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 101;
}

#pop-window-container {
  position: fixed;
  background: #fff;
  bottom: 0rpx;
  left: 0;
  height: 400rpx;
  width: 100%;
  z-index: 999;
  font-size:26rpx;
  color:#666;
}

.animation-slider-up-enter {
  -webkit-animation: animation-slider-up-enter 0.5s;
  animation: animation-slider-up-enter 0.5s;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
}

@-webkit-keyframes animation-slider-up-enter {
  0% {
    -webkit-transform: translateY(60px);
    transform: translateY(60px);
  }

  to {
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}

@keyframes animation-slider-up-enter {
  0% {
    -webkit-transform: translateY(60px);
    transform: translateY(60px);
  }

  to {
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}

.animation-slider-up-leave {
  -webkit-animation: animation-slider-up-leave 0.5s forwards;
  animation: animation-slider-up-leave 0.5s forwards;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
}

@-webkit-keyframes animation-slider-up-leave {
  0% {
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }

  to {
    -webkit-transform: translateY(400px);
    transform: translateY(400px);
  }
}

@keyframes animation-slider-up-leave {
  0% {
    -webkit-transform: translateY(0px);
    transform: translateY(0px);
  }

  to {
    -webkit-transform: translateY(400px);
    transform: translateY(400px);
  }
}

